/* 主容器与内容区 */
.container {
    width: 100%;
    background-color: #f8f9fa;
    min-height: 100vh;
  }
  
  .main {
    padding: 20rpx 20rpx 120rpx;
  }
  
  /* 网格布局修复 */
  .pet-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
    gap: 20rpx;
    padding: 0 4rpx;
    box-sizing: border-box;
  }
  
  /* 卡片容器优化 */
  .pet-card-vertical {
    background-color: white;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    box-sizing: border-box;
    max-width: 100%;
  }
  
  /* 图片自适应 */
  .pet-image-vertical {
    position: relative;
    width: 100%;
    padding-top: 75%; /* 4:3 宽高比 */
    overflow: hidden;
  }
  
  .pet-image-vertical image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  /* 卡片信息区优化 */
  .pet-info-vertical {
    padding: 16rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 0; /* 允许内容收缩 */
  }
  
  /* 名称状态行 */
  .name-status-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .pet-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #2d3748;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 65%;
  }
  
  .status {
    font-size: 18rpx;
    padding: 2rpx 10rpx;
    border-radius: 9999rpx;
    font-weight: 500;
    background-color: rgba(229, 62, 62, 0.1);
    color: #e53e3e;
  }
  
  .status.status-adoptable {
    background-color: rgba(72, 187, 120, 0.15);
    color: #38a169;
  }
  
  .status.status-deceased {
    background-color: rgba(229, 62, 62, 0.1);
    color: #e53e3e;
  }
  
  /* 品种年龄性别行 */
  .breed-age-gender-row {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
    gap: 10rpx;
    font-size: 22rpx;
    color: #666;
    flex-wrap: nowrap;
  }
  
  .breed {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 50%;
  }
  
  .age, .gender {
    flex-shrink: 0;
  }
  
  /* 健康位置行 */
  .health-location-row {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
    font-size: 22rpx;
    gap: 8rpx;
    min-width: 0; /* 解决弹性项目溢出问题 */
  }
  
  .health {
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
  }
  
  .health-healthy {
    background-color: rgba(72, 187, 120, 0.15);
    color: #38a169;
  }
  
  .health-sick {
    background-color: rgba(229, 62, 62, 0.1);
    color: #e53e3e;
  }
  
  .location {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    min-width: 0; /* 关键修复 */
  }
  
  /* 描述行布局 */
  .description-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 8rpx;
    gap: 12px;
    min-height: 44px; /* 确保整行有固定高度 */
  }

  /* 描述区域 */
  .description-vertical {
    font-size: 22rpx;
    color: #888;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
    flex: 1;
    word-break: break-word;
  }
  
  /* 加载更多 */
  .load-more {
    padding: 20rpx 0;
    grid-column: 1 / -1;
    text-align: center;
  }
  
  .load-btn {
    background-color: #f7fafc;
    color: #666;
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    padding: 0 40rpx;
  }
  
  /* 无数据提示 */
  .no-more {
    grid-column: 1 / -1;
    text-align: center;
    color: #999;
    padding: 30rpx 0;
  }
  
  /* 媒体查询适配小屏幕 */
  @media (max-width: 700rpx) {
    .pet-list {
      grid-template-columns: repeat(auto-fill, minmax(280rpx, 1fr));
    }
    
    .pet-name {
      max-width: 60%;
    }
    
    .breed {
      max-width: 45%;
    }
  }
  /* 搜索容器优化 */
