/* 点赞功能样式 */
.like-section {
  display: flex;
  align-items: flex-start;
  gap: 4px;
  flex-shrink: 0;
  align-self: flex-start;
}

.like-icon {
  font-size: 18px;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
}

.like-icon.liked {
  color: #ff4757;
}

.like-count {
  font-size: 14px;
  color: #666;
  font-weight: 500;
  min-width: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 20px;
}

/* 未点赞状态的样式 */
.like-section:not(.liked) .like-icon {
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .description-row {
    min-height: 40px; /* 小屏幕下适当减少高度 */
  }
  
