.container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding: 20rpx;
  }
  
  /* 加载状态样式 */
  .loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 500rpx;
  }
  
  .loading-spinner {
    width: 50rpx;
    height: 50rpx;
    border: 5rpx solid rgba(66, 185, 131, 0.2);
    border-radius: 50%;
    border-top-color: #42b983;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  .loading-text {
    margin-top: 20rpx;
    color: #666;
    font-size: 28rpx;
  }
  
  /* 错误状态样式 */
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 500rpx;
  }
  
  .error-icon {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 30rpx;
  }
  
  .error-text {
    color: #999;
    font-size: 30rpx;
    margin-bottom: 30rpx;
  }
  
  .retry-btn {
    background-color: #42b983;
    color: white;
    border-radius: 50rpx;
    padding: 15rpx 40rpx;
    font-size: 28rpx;
  }
  
  /* 列表样式 */
  .announcement-list {
    background-color: transparent;
    border-radius: 0;
    box-shadow: none;
    padding: 16rpx 0;
  }
  
  .announcement-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    border-radius: 18rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
    margin-bottom: 24rpx;
    padding: 32rpx 36rpx 28rpx 36rpx;
    transition: box-shadow 0.2s, background 0.2s;
    position: relative;
  }
  .announcement-item:active {
    background: #f6fffa;
    box-shadow: 0 2rpx 8rpx rgba(72,187,120,0.10);
  }
  
  .item-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
  }
  
  .title {
    font-size: 36rpx;
    color: #222;
    font-weight: 700;
    margin-bottom: 2rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .time {
    font-size: 24rpx;
    color: #b5b5b5;
    text-align: left;
  }
  
  .arrow-icon {
    width: 32rpx;
    height: 32rpx;
    margin-left: 18rpx;
    opacity: 0.5;
    align-self: center;
  }
  
  /* 移除最后一条的 margin-bottom */
  .announcement-item:last-child {
    margin-bottom: 0;
  }