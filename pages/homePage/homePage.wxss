/* 主页样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  min-height: 100vh;
  background: transparent;
  padding: 0;
}

/* 头部区域 */
.header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 0;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.welcome-section {
  flex: 1;
}

.welcome-title {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: #2d3748;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.welcome-subtitle {
  display: block;
  font-size: 26rpx;
  color: #718096;
  font-weight: 400;
  line-height: 1.4;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.action-icon {
  font-size: 28rpx;
  color: #ffffff;
}

/* 统计卡片区域 */
.stats-section {
  padding: 0 40rpx 32rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stat-icon {
  font-size: 48rpx;
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  flex-shrink: 0;
}

.stat-content {
  flex: 1;
  min-width: 0;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 800;
  color: #2d3748;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

/* 主要内容区域 */
.announcement-list {
  padding: 0 40rpx 40rpx;
  background: transparent;
}

.list-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 24rpx 0;
}

.list-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.list-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

/* 公告列表项 */
.announcement-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  overflow: hidden;
}

.announcement-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.item-content {
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.item-main {
  flex: 1;
  min-width: 0;
}

.title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 16rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-meta {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
  opacity: 0.7;
}

.meta-text {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

.item-arrow {
  font-size: 32rpx;
  color: #cbd5e0;
  font-weight: 300;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  line-height: 1.4;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 50%;
  border-top-color: #667eea;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  color: #718096;
  font-size: 28rpx;
  font-weight: 500;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 40rpx;
}

.error-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 48rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  max-width: 500rpx;
  width: 100%;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.7;
}

.error-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #e53e3e;
  margin-bottom: 12rpx;
}

.error-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-text {
  color: #ffffff;
  font-weight: 600;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .welcome-title {
    font-size: 36rpx;
  }
  
  .stats-section {
    padding: 0 30rpx 24rpx;
  }
  
  .announcement-list {
    padding: 0 30rpx 30rpx;
  }
  
  .item-content {
    padding: 28rpx;
  }
  
  .title {
    font-size: 30rpx;
  }
  
  .loading-container,
  .error-container {
    margin: 30rpx;
  }
}