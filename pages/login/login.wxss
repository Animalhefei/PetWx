/* 登录页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: 200rpx;
  left: -75rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  right: 50rpx;
}

/* 头部样式 */
.header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.logo-text {
  font-size: 64rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 4rpx;
}

.logo-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  letter-spacing: 2rpx;
}

.welcome-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
}

/* 登录表单区域 */
.login-box {
  flex: 1;
  padding: 0 40rpx 40rpx;
  position: relative;
  z-index: 2;
}

.form-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.input-group {
  margin-bottom: 32rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  overflow: hidden;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.input-icon {
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #6c757d;
  flex-shrink: 0;
}

.input {
  flex: 1;
  height: 88rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #2d3748;
  background: transparent;
  border: none;
  outline: none;
}

.input::placeholder {
  color: #a0aec0;
}

.pwd-input {
  padding-right: 80rpx;
}

.pwd-toggle-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
  transition: opacity 0.3s ease;
  z-index: 2;
}

.pwd-toggle-icon:active {
  opacity: 1;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  margin-top: 40rpx;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(102, 126, 234, 0.3);
}

.login-btn:disabled {
  opacity: 0.7;
  transform: none;
}

.btn-text {
  color: #ffffff;
  font-weight: 600;
}

/* 操作链接 */
.action-row {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
  padding: 0 20rpx;
}

.action-link {
  color: #667eea;
  font-size: 28rpx;
  font-weight: 500;
  text-decoration: none;
  transition: color 0.3s ease;
}

.action-link:active {
  color: #5a67d8;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx 24rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #a0aec0;
  cursor: pointer;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: #f1f5f9;
  color: #64748b;
}

.modal-body {
  padding: 24rpx 40rpx;
}

.modal-input-group {
  margin-bottom: 24rpx;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2d3748;
  background: #f8f9fa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.modal-input:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.modal-input::placeholder {
  color: #a0aec0;
}

.pwd-row {
  position: relative;
}

.pwd-row .modal-input {
  padding-right: 80rpx;
}

.pwd-row .pwd-toggle-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 40rpx 32rpx;
  border-top: 1rpx solid #f1f5f9;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.modal-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.modal-btn.cancel {
  background: #f1f5f9;
  color: #64748b;
}

.modal-btn.cancel:active {
  background: #e2e8f0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 60rpx 30rpx 40rpx;
  }
  
  .logo-text {
    font-size: 56rpx;
  }
  
  .login-box {
    padding: 0 30rpx 30rpx;
  }
  
  .form-container {
    padding: 40rpx 30rpx;
  }
  
  .modal {
    margin: 20rpx;
  }
  
  .modal-header,
  .modal-body,
  .modal-actions {
    padding-left: 30rpx;
    padding-right: 30rpx;
  }
}
