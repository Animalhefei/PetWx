/* 申请页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.discover-form {
  padding: 40rpx 32rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  margin: 40rpx 24rpx;
}

.form-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.form-label {
  width: 140rpx;
  font-size: 30rpx;
  color: #2d3748;
  font-weight: 500;
  flex-shrink: 0;
  margin-top: 8rpx;
}

.form-input {
  flex: 1;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 30rpx;
  color: #2d3748;
  background: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-textarea {
  flex: 1;
  min-height: 180rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 30rpx;
  color: #2d3748;
  background: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-img-list {
  display: flex;
  flex-direction: row;
  gap: 18rpx;
  align-items: center;
  flex-wrap: wrap;
}

.img-preview-wrap {
  position: relative;
  margin-bottom: 18rpx;
}

.img-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  background: #f7f8fa;
}

.img-remove {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 36rpx;
  height: 36rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 28rpx;
  font-weight: bold;
  z-index: 2;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
  transition: all 0.3s ease;
}

.img-remove:active {
  transform: scale(0.95);
}

.img-add-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  color: #667eea;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border: 1rpx dashed rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.img-add-btn:active {
  background: rgba(255, 255, 255, 1);
  border-color: #667eea;
}

.rescue-banner-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
}

.rescue-banner {
  width: 90vw;
  max-width: 700rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
}

.rescue-tip {
  margin: 32rpx 32rpx 0 32rpx;
  font-size: 28rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 16rpx;
  padding: 18rpx 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.img-tip {
  font-size: 24rpx;
  color: #667eea;
  margin-top: 8rpx;
  margin-left: 12rpx;
}

.form-submit-btn {
  width: 100%;
  margin-top: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}

.form-submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}
