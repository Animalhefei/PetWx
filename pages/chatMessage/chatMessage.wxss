.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f7;
}

.msg-list {
  flex: 1;
  padding: 32rpx 32rpx 24rpx 32rpx;
  overflow: auto;
}

.msg-row {
  display: flex;
  margin-bottom: 24rpx;
}
.msg-row.me {
  justify-content: flex-end;
  padding-right: 60rpx;
}
.msg-row.other {
  justify-content: flex-start;
}

.msg-bubble-wrap {
  display: flex;
  align-items: flex-end;
}
.msg-bubble-wrap.me {
  flex-direction: row-reverse;
}
.msg-bubble-wrap.other {
  flex-direction: row;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  margin: 0 12rpx;
  background: #eee;
  box-shadow: 0 2rpx 8rpx #ddd;
}

.msg-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 56vw;
  min-width: 0;
}
.msg-item.me {
  align-items: flex-end;
}

.msg-meta {
  font-size: 20rpx;
  color: #b2b2b2;
  margin-bottom: 6rpx;
  word-break: break-all;
  max-width: 48vw;
}
.msg-username {
  font-weight: bold;
}
.msg-item.other .msg-username {
  color: #4fc08d;
}

.msg-content {
  display: inline-block;
  word-break: break-all;
  white-space: pre-line;
  padding: 18rpx 28rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  margin-top: 2rpx;
  max-width: 48vw;
  min-width: 0;
  overflow-wrap: break-word;
  border-radius: 0 16rpx 16rpx 16rpx;
  background: #fff;
  color: #222;
}
.msg-item.me .msg-content {
  background: linear-gradient(135deg, #95ec69 0%, #09bb07 100%);
  color: #fff;
  border-radius: 16rpx 0 16rpx 16rpx;
}

.input-bar {
  display: flex;
  padding: 16rpx 32rpx 32rpx 32rpx;
  border-top: 1rpx solid #eee;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.04);
  margin: 0 0 0 0;
}
.input {
  flex: 1;
  border: 1rpx solid #e5e5e5;
  border-radius: 24rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #f7f8fa;
}
.send-btn {
  margin-left: 16rpx;
  background: linear-gradient(90deg, #36d1c5, #5b86e5);
  color: #fff;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 40rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx #b2ebf2;
}
.send-btn:active {
  background: linear-gradient(90deg, #5b86e5, #36d1c5);
}