/* 聊天容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 聊天头部 */
.chat-header {
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
  padding: 10px 15px;
  position: relative;
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chat-info {
  display: flex;
  align-items: center;
}

.chat-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.chat-details {
  display: flex;
  flex-direction: column;
}

.chat-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.chat-status {
  font-size: 12px;
  color: #999;
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 5px 10px;
}

.action-icon {
  font-size: 20px;
  color: #666;
}

/* 消息列表 */
.msg-list {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
}

.chat-date-divider {
  text-align: center;
  margin: 10px 0;
}

.date-text {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 12px;
  padding: 4px 12px;
  font-size: 12px;
  color: #999;
}

/* 消息行 */
.msg-row {
  display: flex;
  margin-bottom: 15px;
  width: 100%;
}

.msg-row.me {
  justify-content: flex-end;
}

.msg-row.other {
  justify-content: flex-start;
}

/* 对方消息容器 */
.msg-row.other .msg-bubble-wrap {
  display: flex;
  align-items: flex-start;
  max-width: 80%;
  flex-direction: row;
}

/* 我的消息容器 */
.msg-row.me .msg-bubble-wrap {
  display: flex;
  align-items: flex-start;
  max-width: 80%;
  flex-direction: row;
}

/* 头像 */
.avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin: 0 8px;
  flex-shrink: 0;
}

/* 对方消息项 */
.msg-row.other .msg-item {
  display: flex;
  flex-direction: column;
  max-width: 60%;
  align-items: flex-start;
  width: fit-content;
}

/* 我的消息项 */
.msg-row.me .msg-item {
  display: flex;
  flex-direction: column;
  max-width: 60%;
  align-items: flex-end;
  width: fit-content;
}

/* 消息元信息 */
.msg-meta {
  display: flex;
  align-items: baseline;
  margin-bottom: 4px;
  width: 100%;
}

.msg-row.me .msg-meta {
  flex-direction: row;
  justify-content: flex-end;
}

.msg-username {
  font-size: 12px;
  color: #999;
  margin: 0 4px;
  white-space: nowrap;
}

.service-tag {
  color: #4a90e2;
}

.msg-time {
  font-size: 10px;
  color: #bbb;
  margin: 0 4px;
  white-space: nowrap;
}

/* 对方消息内容 */
.msg-row.other .msg-content {
  padding: 10px 12px;
  border-radius: 8px;
  word-wrap: break-word;
  word-break: break-all;
  position: relative;
  line-height: 1.4;
  background-color: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-top-left-radius: 0;
  max-width: 100%;
}

/* 我的消息内容 */
.msg-row.me .msg-content {
  padding: 10px 12px;
  border-radius: 8px;
  word-wrap: break-word;
  word-break: break-all;
  position: relative;
  line-height: 1.4;
  background-color: #e6f1ff;
  border-top-right-radius: 0;
  max-width: 100%;
}

.msg-text {
  font-size: 15px;
  color: #333;
}

/* 消息状态 */
.msg-status {
  margin-top: 4px;
}

.status-icon {
  font-size: 12px;
  color: #999;
}

/* 空状态 */
.empty-chat {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 20px;
  text-align: center;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 15px;
  opacity: 0.5;
}

.empty-text {
  font-size: 18px;
  color: #666;
  margin-bottom: 8px;
}

.empty-desc {
  font-size: 14px;
  color: #999;
}

/* 输入栏 */
.input-bar {
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  padding: 8px 12px;
  display: flex;
  align-items: center;
}

.input-wrapper {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 20px;
  padding: 0 12px;
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  padding: 8px 0;
  font-size: 15px;
  background: transparent;
  border: none;
  outline: none;
}

.input-actions {
  display: flex;
}

.send-btn {
  background-color: #4a90e2;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 8px 16px;
  margin-left: 8px;
  font-size: 14px;
  opacity: 0.6;
}

.send-btn.active {
  opacity: 1;
}

.btn-text {
  font-size: 14px;
}

/* 聊天选项弹窗 */
.options-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.options-content {
  background-color: #fff;
  border-radius: 12px;
  padding: 10px 0;
  width: 80%;
  max-width: 300px;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.option-item:last-child {
  border-bottom: none;
}

.option-icon {
  font-size: 18px;
  margin-right: 10px;
}

.option-text {
  font-size: 16px;
  color: #333;
}