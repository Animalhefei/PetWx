/* 聊天页面样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: transparent;
}

/* 聊天头部 */
.chat-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 40rpx 32rpx 24rpx;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chat-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.chat-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.chat-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.chat-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
}

.chat-status {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

/* 消息列表 */
.msg-list {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow: auto;
  background: transparent;
}

.chat-date-divider {
  text-align: center;
  margin: 32rpx 0;
}

.date-text {
  background: rgba(255, 255, 255, 0.9);
  color: #718096;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

.msg-row {
  display: flex;
  margin-bottom: 24rpx;
  animation: fadeInUp 0.3s ease;
}

.msg-row.me {
  justify-content: flex-end;
}

.msg-row.other {
  justify-content: flex-start;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.msg-bubble-wrap {
  display: flex;
  align-items: flex-end;
  max-width: 70%;
}

.msg-bubble-wrap.me {
  flex-direction: row-reverse;
}

.msg-bubble-wrap.other {
  flex-direction: row;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin: 0 16rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.msg-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 100%;
  min-width: 0;
}

.msg-item.me {
  align-items: flex-end;
}

.msg-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
  max-width: 100%;
}

.msg-username {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
  white-space: nowrap;
}

.service-tag {
  background: rgba(72, 187, 120, 0.2);
  color: #48bb78;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  margin-left: 8rpx;
}

.msg-time {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 400;
}

.msg-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  max-width: 100%;
  word-wrap: break-word;
}

.msg-item.me .msg-content {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.msg-item.other .msg-content {
  background: rgba(255, 255, 255, 0.95);
  color: #2d3748;
}

.msg-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-word;
  white-space: pre-wrap;
}

.msg-status {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.status-icon {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

/* 空状态 */
.empty-chat {
  text-align: center;
  padding: 120rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  margin: 40rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 12rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #718096;
  line-height: 1.4;
}

/* 输入栏 */
.input-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 24rpx 32rpx 32rpx;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 16rpx;
  align-items: flex-end;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 28rpx;
  color: #2d3748;
  outline: none;
  min-height: 40rpx;
  max-height: 120rpx;
}

.input::placeholder {
  color: #a0aec0;
}

.input-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 16rpx;
}

.input-actions .action-btn {
  width: 48rpx;
  height: 48rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.input-actions .action-btn:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.input-actions .action-icon {
  font-size: 24rpx;
  color: #667eea;
}

.send-btn {
  background: #e2e8f0;
  color: #a0aec0;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.send-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.send-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-text {
  color: inherit;
  font-weight: 600;
}

/* 聊天选项弹窗 */
.options-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.options-content {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  width: 100%;
  max-height: 60vh;
  overflow-y: auto;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin: 0 -16rpx;
}

.option-icon {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.option-text {
  font-size: 30rpx;
  color: #2d3748;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .chat-header {
    padding: 32rpx 24rpx 20rpx;
  }
  
  .chat-avatar {
    width: 72rpx;
    height: 72rpx;
  }
  
  .chat-name {
    font-size: 30rpx;
  }
  
  .msg-list {
    padding: 20rpx 24rpx;
  }
  
  .input-bar {
    padding: 20rpx 24rpx 28rpx;
  }
  
  .input-wrapper {
    padding: 14rpx 18rpx;
  }
  
  .send-btn {
    padding: 14rpx 28rpx;
    min-width: 100rpx;
  }
}