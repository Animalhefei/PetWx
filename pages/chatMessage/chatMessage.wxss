/* 聊天容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 聊天头部 */
.chat-header {
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
  padding: 8px 12px;
  position: relative;
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chat-info {
  display: flex;
  align-items: center;
}

.chat-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 8px;
}

.chat-details {
  display: flex;
  flex-direction: column;
}

.chat-name {
  font-size: 15px;
  font-weight: 500;
  color: #333;
}

.chat-status {
  font-size: 11px;
  color: #999;
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 4px 8px;
}

.action-icon {
  font-size: 18px;
  color: #666;
}

/* 消息列表 */
.msg-list {
  flex: 1;
  padding: 12px;
  overflow-y: auto;
}

.chat-date-divider {
  text-align: center;
  margin: 8px 0;
}

.date-text {
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 10px;
  padding: 3px 10px;
  font-size: 11px;
  color: #999;
}

/* 消息行 */
.msg-row {
  display: flex;
  margin-bottom: 12px;
  width: 100%;
}

.msg-row.me {
  justify-content: flex-end;
}

.msg-row.other {
  justify-content: flex-start;
}

/* 对方消息容器 */
.msg-row.other .msg-bubble-wrap {
  display: flex;
  align-items: flex-start;
  max-width: 70%;
  flex-direction: row;
  margin-right: auto;
}

/* 我的消息容器 */
.msg-row.me .msg-bubble-wrap {
  display: flex;
  align-items: flex-start;
  max-width: 70%;
  flex-direction: row;
  margin-left: auto;
}

/* 头像 */
.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  margin: 0 4px;
  flex-shrink: 0;
}

/* 调整我方头像位置，使其更靠近消息气泡 */
.msg-row.me .avatar {
  margin-left: 4px;
  margin-right: 18px;
}

/* 对方消息项 */
.msg-row.other .msg-item {
  display: flex;
  flex-direction: column;
  max-width: 75%;
  align-items: flex-start;
  width: fit-content;
}

/* 我的消息项 */
.msg-row.me .msg-item {
  display: flex;
  flex-direction: column;
  max-width: 75%;
  align-items: flex-end;
  width: fit-content;
}

/* 消息元信息 */
.msg-meta {
  display: flex;
  align-items: baseline;
  margin-bottom: 3px;
  width: 100%;
}

.msg-row.me .msg-meta {
  flex-direction: row;
  justify-content: flex-end;
}

.msg-username {
  font-size: 11px;
  color: #999;
  margin: 0 3px;
  white-space: nowrap;
}

.service-tag {
  color: #4a90e2;
  font-size: 10px;
}

.msg-time {
  font-size: 9px;
  color: #bbb;
  margin: 0 3px;
  white-space: nowrap;
}

/* 对方消息内容 */
.msg-row.other .msg-content {
  padding: 8px 10px;
  border-radius: 6px;
  word-wrap: break-word;
  word-break: break-all;
  position: relative;
  line-height: 1.3;
  background-color: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-top-left-radius: 0;
  max-width: 100%;
}

/* 我的消息内容 */
.msg-row.me .msg-content {
  padding: 8px 10px;
  border-radius: 6px;
  word-wrap: break-word;
  word-break: break-all;
  position: relative;
  line-height: 1.3;
  background-color: #e6f1ff;
  border-top-right-radius: 0;
  max-width: 100%;
}

.msg-text {
  font-size: 14px;
  color: #333;
}

/* 消息状态 */
.msg-status {
  margin-top: 3px;
  display: flex;
  justify-content: flex-end;
}

.status-icon {
  font-size: 10px;
  margin-left: 3px;
}

.status-icon.sending {
  color: #bbb;
  animation: blink 1s infinite;
}

.status-icon.sent {
  color: #4a90e2;
}

.status-icon.delivered {
  color: #4a90e2;
}

.status-icon.read {
  color: #4a90e2;
}

@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

/* 空状态 */
.empty-chat {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 15px;
  text-align: center;
}

.empty-icon {
  font-size: 40px;
  margin-bottom: 12px;
  opacity: 0.5;
}

.empty-text {
  font-size: 16px;
  color: #666;
  margin-bottom: 6px;
}

.empty-desc {
  font-size: 12px;
  color: #999;
}

/* 输入栏 */
.input-bar {
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  padding: 6px 10px;
  display: flex;
  align-items: center;
}

.input-wrapper {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 18px;
  padding: 0 10px;
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  padding: 6px 0;
  font-size: 14px;
  background: transparent;
  border: none;
  outline: none;
}

.input-actions {
  display: flex;
}

.send-btn {
  background-color: #4a90e2;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 6px 14px;
  margin-left: 6px;
  font-size: 13px;
  opacity: 0.6;
}

.send-btn.active {
  opacity: 1;
}

.btn-text {
  font-size: 13px;
}

/* 聊天选项弹窗 */
.options-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.options-content {
  background-color: #fff;
  border-radius: 10px;
  padding: 8px 0;
  width: 70%;
  max-width: 280px;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.option-item:last-child {
  border-bottom: none;
}

.option-icon {
  font-size: 16px;
  margin-right: 8px;
}

.option-text {
  font-size: 14px;
  color: #333;
}

/* 表情选择面板 */
.emoji-panel {
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  padding: 10px;
  max-height: 200px;
  overflow-y: auto;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.emoji-item {
  width: 10%;
  text-align: center;
  padding: 5px;
  box-sizing: border-box;
}

.emoji-text {
  font-size: 20px;
  cursor: pointer;
}

.emoji-item:hover {
  background-color: #f5f5f5;
  border-radius: 4px;
}

/* 响应式设计 - 小屏幕设备 */
@media screen and (max-width: 350px) {
  .chat-header {
    padding: 6px 10px;
  }
  
  .chat-avatar {
    width: 32px;
    height: 32px;
    margin-right: 6px;
  }
  
  .chat-name {
    font-size: 14px;
  }
  
  .chat-status {
    font-size: 10px;
  }
  
  .msg-list {
    padding: 10px;
  }
  
  .msg-row {
    margin-bottom: 10px;
  }
  
  .avatar {
    width: 28px;
    height: 28px;
    margin: 0 5px;
  }
  
  .msg-row.other .msg-item,
  .msg-row.me .msg-item {
    max-width: 65%;
  }
  
  .msg-username {
    font-size: 10px;
  }
  
  .msg-time {
    font-size: 8px;
  }
  
  .msg-row.other .msg-content,
  .msg-row.me .msg-content {
    padding: 6px 8px;
    border-radius: 5px;
    font-size: 13px;
  }
  
  .input-bar {
    padding: 5px 8px;
  }
  
  .input-wrapper {
    border-radius: 16px;
    padding: 0 8px;
  }
  
  .input {
    padding: 5px 0;
    font-size: 13px;
  }
  
  .send-btn {
    border-radius: 4px;
    padding: 5px 12px;
    font-size: 12px;
  }
}