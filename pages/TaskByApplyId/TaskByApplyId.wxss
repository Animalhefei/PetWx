/* pages/TaskByApplyId/TaskByApplyId.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.task-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  margin: 18px 12px;
  padding: 20px 16px 16px 16px;
  transition: all 0.3s ease;
}

.task-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  font-size: 15px;
  color: #2d3748;
}

.task-label {
  width: 90px;
  color: #667eea;
  font-weight: bold;
}

/* 表单样式 */
.form-block {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  margin: 18px 12px;
  padding: 20px 16px 16px 16px;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 14px;
}

.form-label {
  width: 90px;
  color: #667eea;
  font-size: 15px;
  font-weight: bold;
}

.picker-value, .form-input {
  flex: 1;
  font-size: 15px;
  color: #2d3748;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 6px;
  padding: 8px 10px;
  border: 1px solid rgba(102, 126, 234, 0.2);
  margin-left: 8px;
  transition: all 0.3s ease;
}

.picker-value:focus, .form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.1);
  outline: none;
}

.form-input {
  height: 36px;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  padding: 12px 0;
  font-weight: bold;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.2);
  margin-top: 10px;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
}

/* 如需统一提示样式，建议在wxml加自定义类名再用类名控制 */