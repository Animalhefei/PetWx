/* pages/MyMain/MyMain.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #333;
}

.main-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 侧边栏样式 */
.side-layout {
  display: flex;
  flex-direction: row;
  min-height: 100vh;
}

.side-nav {
  width: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  backdrop-filter: blur(10rpx);
  box-shadow: 2rpx 0 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 32rpx 0;
  gap: 8rpx;
  flex-shrink: 0;
  border-radius: 0 20rpx 20rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  z-index: 10;
}

.nav-header {
  padding: 24rpx 16rpx 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.nav-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.nav-list {
  flex: 1;
  padding: 0 8rpx;
}

.side-nav-item {
  padding: 28rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  border-left: 4rpx solid transparent;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  border-radius: 0 16rpx 16rpx 0;
  margin: 0 0 4rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.side-nav-item.active {
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  border-left: 4rpx solid #ffffff;
  font-weight: 600;
  box-shadow: 2rpx 0 12rpx rgba(255, 255, 255, 0.1);
}

/* 鼠标悬停高亮（仅web端有效） */
.side-nav-item:not(.active):hover {
  background: rgba(255, 255, 255, 0.15);
  color: #ffffff;
}

.nav-icon {
  font-size: 44rpx;
  margin-bottom: 4rpx;
}

.nav-label {
  line-height: 1.2;
}

.nav-footer {
  margin-top: auto;
  padding: 32rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.logout-btn {
  padding: 28rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #ffd6d6;
  cursor: pointer;
  border-left: 4rpx solid transparent;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
  border-radius: 0 16rpx 16rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.logout-btn:hover {
  background: rgba(255, 223, 223, 0.2);
  border-left: 4rpx solid #ff9a9a;
  color: #ffffff;
}

/* 右侧内容区样式 */
.side-content {
  flex: 1;
  padding: 32rpx 32rpx 32rpx 192rpx;
  overflow-y: hidden;
  background: #E2EAF4;
  min-height: 100vh;
}

.content-header {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.content-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.content-subtitle {
  font-size: 26rpx;
  color: #718096;
  display: block;
}

/* 个人资料卡片 */
.user-profile-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 40rpx;
  margin-bottom: 40rpx;
  transition: transform 0.3s, box-shadow 0.3s;
}

/* 编辑资料按钮样式 */
.edit-profile-btn {
  max-width: 160rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  border: none;
}

.user-profile-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.profile-header {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 40rpx;
}

.avatar-section {
  position: relative;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 6rpx solid #f0f4ff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}



.user-info {
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.phone {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 20rpx;
  display: block;
}

.edit-profile-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 10rpx 28rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(29, 29, 29, 0.3);
  transition: all 0.3s;
}

.edit-profile-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.btn-text {
  font-weight: 500;
}

.profile-details {
  margin-bottom: 40rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #718096;
}

.detail-value {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
}

.balance {
  color: #667eea;
  font-weight: 600;
}

.credit {
  color: #764ba2;
  font-weight: 600;
}

.profile-actions {
  display: flex;
  justify-content: center;
}

.action-btn {
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.btn-icon {
  font-size: 32rpx;
}

/* 申请列表样式 */
.loading-state,
.error-state,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  color: #e53e3e;
}

.error-text {
  font-size: 28rpx;
  color: #e53e3e;
  margin-bottom: 24rpx;
  text-align: center;
}

.retry-btn {
  background: #fff;
  color: #667eea;
  border: 1rpx solid #667eea;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.retry-btn:active {
  background: #f5faff;
}

.apply-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.apply-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  margin-bottom: 32rpx;
  transition: transform 0.3s, box-shadow 0.3s;
}

.apply-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 28rpx;
}

.pet-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.pet-info {
  flex: 1;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 12rpx;
  display: block;
}

.status-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge[data-status='待审核'] {
  background: #fff3cd;
  color: #856404;
}

.status-badge[data-status='审核中'] {
  background: #e6f7ff;
  color: #0050b3;
}

.status-badge[data-status='已通过'] {
  background: #d4edda;
  color: #155724;
}

.status-badge[data-status='已拒绝'] {
  background: #f8d7da;
  color: #721c24;
}

.card-content {
  margin-bottom: 28rpx;
}

.info-section {
  margin-bottom: 32rpx;
}

.info-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 16rpx;
  display: block;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item.full-width {
  grid-column: 1 / -1;
}

.info-label {
  font-size: 24rpx;
  color: #718096;
}

.info-value {
  font-size: 26rpx;
  color: #2d3748;
  font-weight: 500;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
}

.view-task-btn {
  background: #f5faff;
  color: #667eea;
  border: 1rpx solid #667eea;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.view-task-btn:active {
  background: #e6f7ff;
}

.empty-state {
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  color: #cbd5e0;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #4a5568;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #718096;
}

/* 救助信息样式 */
.discover-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  margin-bottom: 32rpx;
  transition: transform 0.3s, box-shadow 0.3s;
}

.discover-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.discover-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.discover-badges {
  display: flex;
  gap: 12rpx;
}

.badge {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.type-badge {
  background: #e6fffa;
  color: #2c7a6b;
}

.status-badge {
  background: #f0fff4;
  color: #276749;
}

.discover-content {
  margin-bottom: 24rpx;
}

.discover-desc {
  font-size: 28rpx;
  color: #2d3748;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.discover-location {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #718096;
}

.location-icon {
  font-size: 28rpx;
}

.discover-images {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.discover-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  object-fit: cover;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(8rpx);
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  min-width: 600rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from { transform: translateY(50rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d3748;
}

.modal-close {
  font-size: 40rpx;
  color: #718096;
  cursor: pointer;
  transition: color 0.3s;
}

.modal-close:hover {
  color: #2d3748;
}

.modal-body {
  width: 100%;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #4a5568;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s;
  box-sizing: border-box;
}

.modal-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

.modal-actions {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  margin-top: 16rpx;
  width: 100%;
  justify-content: flex-end;
}

.modal-btn {
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.modal-btn.cancel {
  background: #fff;
  color: #718096;
  border: 2rpx solid #e2e8f0;
}

.modal-btn.cancel:active {
  background: #f7fafc;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.modal-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

/* 适配小屏幕设备 */
@media screen and (max-width: 768rpx) {
  .side-nav {
    width: 160rpx;
  }
  .side-content {
    padding: 24rpx;
  }
  .avatar {
    width: 120rpx;
    height: 120rpx;
  }
  .pet-image {
    width: 120rpx;
    height: 120rpx;
  }
  .modal {
    min-width: 85vw;
    padding: 32rpx 24rpx;
  }
}

