/* pages/SuppliesDetail/SuppliesDetail.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  padding-bottom: 120rpx;
  background: transparent;
  min-height: 100vh;
}

.loading, .error {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin: 40rpx 0;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.banner-box {
  width: 100vw;
  height: 380rpx;
  overflow: hidden;
  margin-bottom: -60rpx;
}

.banner-img {
  width: 100vw;
  height: 380rpx;
  object-fit: cover;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.main-info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin: -60rpx 32rpx 24rpx 32rpx;
  padding: 40rpx 32rpx 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  z-index: 2;
}

.main-title-row {
  display: flex;
  align-items: center;
  gap: 18rpx;
  margin-bottom: 10rpx;
}

.main-name {
  font-size: 40rpx;
  font-weight: 800;
  color: #2d3748;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main-hot {
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 9999rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #667eea 60%, #764ba2 100%);
  color: #fff;
  margin-left: 8rpx;
}

.main-meta-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.main-category {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.10);
  border-radius: 8rpx;
  padding: 2rpx 10rpx;
  font-weight: 600;
}

.main-brand {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

.main-price-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.main-price {
  font-size: 38rpx;
  font-weight: 700;
  color: #e53e3e;
  letter-spacing: 2rpx;
}

.main-rating {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
}

.param-table {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin: 0 32rpx 18rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  padding: 24rpx 24rpx 8rpx 24rpx;
}

.param-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #718096;
  padding: 8rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
}

.param-row:last-child {
  border-bottom: none;
}

.param-label {
  color: #667eea;
  font-weight: 500;
}

.param-value {
  color: #2d3748;
  font-weight: 600;
}

.desc-block {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  margin: 18rpx 32rpx 18rpx 32rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.desc-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 10rpx;
  display: block;
}

.desc-content {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.7;
}

.time-row {
  display: flex;
  gap: 24rpx;
  margin: 0 32rpx 0 32rpx;
}

.time-info {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 18rpx 32rpx 32rpx 32rpx;
  z-index: 100;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

/* 评论图标样式 */
.comment-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 8rpx;
  min-width: 100rpx;
}

.comment-img {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.comment-text {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 500;
}

.comment-count {
  position: absolute;
  top: 0;
  right: 12rpx;
  background: #e53e3e;
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  min-width: 20rpx;
  text-align: center;
  font-weight: 600;
}

.buy-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 38rpx;
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.buy-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.cart-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 38rpx;
  font-size: 32rpx;
  font-weight: 700;
  background: rgba(255, 255, 255, 0.8);
  color: #667eea;
  border: 2rpx solid #667eea;
  transition: all 0.3s ease;
}

.cart-btn:active {
  background: rgba(102, 126, 234, 0.1);
}

.buy-popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.35);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-popup {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  width: 80vw;
  max-width: 480rpx;
  padding: 40rpx 32rpx 32rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.buy-popup-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 24rpx;
}

.buy-popup-input {
  width: 60%;
  height: 60rpx;
  font-size: 28rpx;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.buy-popup-actions {
  display: flex;
  width: 100%;
  gap: 24rpx;
  justify-content: center;
}

.buy-popup-cancel {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.8);
  color: #718096;
  border: 2rpx solid #e5e5e5;
}

.buy-popup-confirm {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  font-weight: 700;
}

/* 评论弹窗样式 */
.comment-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.comment-modal {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.3s ease;
  box-sizing: border-box;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
  box-sizing: border-box;
}

.comment-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
}

.comment-count-text {
  font-size: 24rpx;
  color: #718096;
  margin-left: 12rpx;
}

.comment-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #a0aec0;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.comment-close:active {
  background: #f1f5f9;
  color: #64748b;
}

.comment-input-container {
  display: flex;
  margin: 24rpx 32rpx;
  background: #f7fafc;
  border-radius: 30rpx;
  padding: 16rpx 20rpx;
  align-items: center;
}

.comment-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #2d3748;
  background: transparent;
  padding-left: 4rpx;
}

.send-btn {
  width: 120rpx !important;
  height: 64rpx !important;
  line-height: 64rpx !important;
  text-align: center !important;
  background: #667eea !important;
  color: white !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
  border-radius: 32rpx !important;
  margin-left: 16rpx !important;
  padding: 0 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease !important;
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.2) !important;
  border: none !important;
}

.send-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(102, 126, 234, 0.3);
}

.send-btn[disabled] {
  opacity: 0.6;
  background: #cbd5e0;
  box-shadow: none;
}

.comments-list {
  max-height: 60vh;
  padding: 0 24rpx 24rpx;
  box-sizing: border-box;
  overflow-x: hidden;
}

.comment-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #edf2f7;
}

.comment-item:last-child {
  border-bottom: none;
}

.reply-item {
  padding: 20rpx 0 20rpx 40rpx;
  border-bottom: 1rpx solid #edf2f7;
  margin-left: 40rpx;
  margin-top: 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.comment-header-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  gap: 8rpx;
  padding-right: 16rpx;
}

.avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #e2e8f0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-text {
  font-size: 28rpx;
  color: #4a5568;
  font-weight: 600;
}

.comment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  margin-right: 16rpx;
  max-width: calc(100% - 160rpx);
}

.user-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.comment-time {
  font-size: 20rpx;
  color: #a0aec0;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 4rpx;
  flex-shrink: 0;
  min-width: 80rpx;
  margin-left: auto;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  min-width: 40rpx;
  height: 40rpx;
}

.action-btn:active {
  background: rgba(102, 126, 234, 0.1);
}

.reply-btn {
  gap: 2rpx;
  padding: 4rpx 6rpx;
}

.delete-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx;
}

.action-icon {
  font-size: 20rpx;
}

.action-text {
  font-size: 18rpx;
  color: #718096;
  white-space: nowrap;
}

.comment-content {
  font-size: 26rpx;
  color: #2d3748;
  line-height: 1.7;
  margin-bottom: 12rpx;
  padding-left: 68rpx;
  word-wrap: break-word;
}

.reply-input-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  background: #f7fafc;
  border-radius: 20rpx;
  padding: 16rpx;
  margin-top: 16rpx;
  margin-left: 68rpx;
}

.reply-input {
  flex: 1;
  height: 60rpx;
  font-size: 26rpx;
  color: #2d3748;
  background: transparent;
}

.reply-btns {
  display: flex;
  justify-content: flex-end;
}

.no-comments {
  text-align: center;
  padding: 80rpx 0;
  color: #718096;
  font-size: 28rpx;
}

/* 移动端响应式优化 */
@media screen and (max-width: 750rpx) {
  .comment-modal {
    max-height: 85vh;
  }
  
  .comments-list {
    max-height: 65vh;
    padding: 0 16rpx 24rpx;
  }
  
  .comment-item {
    padding: 16rpx 0;
  }
  
  .comment-header-item {
    gap: 6rpx;
    padding-right: 20rpx;
  }
  
  .avatar {
    width: 48rpx;
    height: 48rpx;
  }
  
  .avatar-text {
    font-size: 24rpx;
  }
  
  .comment-info {
    margin-right: 20rpx;
    max-width: calc(100% - 140rpx);
  }
  
  .user-name {
    font-size: 24rpx;
  }
  
  .comment-time {
    font-size: 18rpx;
  }
  
  .comment-actions {
    gap: 2rpx;
    min-width: 70rpx;
  }
  
  .action-btn {
    min-width: 36rpx;
    height: 36rpx;
    padding: 2rpx;
  }
  
  .reply-btn {
    padding: 2rpx 4rpx;
  }
  
  .delete-btn {
    width: 36rpx;
    height: 36rpx;
    padding: 2rpx;
  }
  
  .action-icon {
    font-size: 18rpx;
  }
  
  .action-text {
    font-size: 16rpx;
  }
  
  .comment-content {
    font-size: 24rpx;
    padding-left: 56rpx;
  }
  
  .reply-item {
    margin-left: 24rpx;
    margin-right: 16rpx;
    padding: 12rpx;
  }
  
  .reply-input-container {
    margin-left: 56rpx;
    margin-right: 16rpx;
    padding: 10rpx;
  }
}