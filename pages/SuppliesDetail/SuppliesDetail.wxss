/* pages/SuppliesDetail/SuppliesDetail.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  padding-bottom: 120rpx;
  background: transparent;
  min-height: 100vh;
}

.loading, .error {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin: 40rpx 0;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.banner-box {
  width: 100vw;
  height: 380rpx;
  overflow: hidden;
  margin-bottom: -60rpx;
}

.banner-img {
  width: 100vw;
  height: 380rpx;
  object-fit: cover;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.main-info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin: -60rpx 32rpx 24rpx 32rpx;
  padding: 40rpx 32rpx 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  z-index: 2;
}

.main-title-row {
  display: flex;
  align-items: center;
  gap: 18rpx;
  margin-bottom: 10rpx;
}

.main-name {
  font-size: 40rpx;
  font-weight: 800;
  color: #2d3748;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main-hot {
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 9999rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #667eea 60%, #764ba2 100%);
  color: #fff;
  margin-left: 8rpx;
}

.main-meta-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.main-category {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.10);
  border-radius: 8rpx;
  padding: 2rpx 10rpx;
  font-weight: 600;
}

.main-brand {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

.main-price-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 8rpx;
}

.main-price {
  font-size: 38rpx;
  font-weight: 700;
  color: #e53e3e;
  letter-spacing: 2rpx;
}

.main-rating {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
}

.param-table {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin: 0 32rpx 18rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  padding: 24rpx 24rpx 8rpx 24rpx;
}

.param-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #718096;
  padding: 8rpx 0;
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.1);
}

.param-row:last-child {
  border-bottom: none;
}

.param-label {
  color: #667eea;
  font-weight: 500;
}

.param-value {
  color: #2d3748;
  font-weight: 600;
}

.desc-block {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  margin: 18rpx 32rpx 18rpx 32rpx;
  padding: 24rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.desc-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 10rpx;
  display: block;
}

.desc-content {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.7;
}

.time-row {
  display: flex;
  gap: 24rpx;
  margin: 0 32rpx 0 32rpx;
}

.time-info {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 18rpx 32rpx 32rpx 32rpx;
  z-index: 100;
  display: flex;
  gap: 32rpx;
}

.buy-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 38rpx;
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.buy-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.cart-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 38rpx;
  font-size: 32rpx;
  font-weight: 700;
  background: rgba(255, 255, 255, 0.8);
  color: #667eea;
  border: 2rpx solid #667eea;
  transition: all 0.3s ease;
}

.cart-btn:active {
  background: rgba(102, 126, 234, 0.1);
}

.buy-popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.35);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-popup {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  width: 80vw;
  max-width: 480rpx;
  padding: 40rpx 32rpx 32rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.buy-popup-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 24rpx;
}

.buy-popup-input {
  width: 60%;
  height: 60rpx;
  font-size: 28rpx;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  text-align: center;
  margin-bottom: 32rpx;
}

.buy-popup-actions {
  display: flex;
  width: 100%;
  gap: 24rpx;
  justify-content: center;
}

.buy-popup-cancel {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.8);
  color: #718096;
  border: 2rpx solid #e5e5e5;
}

.buy-popup-confirm {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  font-weight: 700;
}