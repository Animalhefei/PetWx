/* pages/PetDetails/PetDetails.wxss */

/* 容器背景 */
.container {
  min-height: 100vh;
  background: #f7fafc;
  padding: 32rpx 0 120rpx 0;
}

/* 宠物卡片 */
.pet-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 24rpx rgba(72,187,120,0.08);
  padding: 36rpx 32rpx 32rpx 32rpx;
  margin: 0 32rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pet-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  object-fit: cover;
  margin-bottom: 24rpx;
  background: #f2f2f2;
}
.pet-info {
  width: 100%;
}
.pet-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.pet-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #222;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pet-status {
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 9999rpx;
  font-weight: 500;
  margin-left: 16rpx;
}
.pet-status.adoptable {
  background: rgba(72,187,120,0.12);
  color: #38a169;
}
.pet-status.adopted {
  background: rgba(229,62,62,0.10);
  color: #e53e3e;
}
.pet-meta {
  display: flex;
  gap: 18rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.pet-health {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}
.health-healthy {
  color: #38a169;
  background: rgba(72,187,120,0.10);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}
.health-sick {
  color: #e53e3e;
  background: rgba(229,62,62,0.10);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}
.pet-location {
  color: #888;
}
.pet-desc {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
  line-height: 1.7;
}

/* 操作按钮区 */
.action-row {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 24rpx;
}
.adopt-btn, .vaccine-btn {
  flex: 1;
  max-width: 260rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(72,187,120,0.10);
}
.adopt-btn {
  background: linear-gradient(90deg, #48bb78 60%, #42b983 100%);
}
.vaccine-btn {
  background: #38a169;
}

/* 疫苗信息弹窗 */
.vaccine-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.25);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.vaccine-card {
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 32rpx rgba(72,187,120,0.12);
  width: auto;
  max-width: 600rpx;
  margin: 0 32rpx 32rpx 32rpx;
  padding: 36rpx 28rpx 28rpx 28rpx;
  position: relative;
}
.vaccine-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 18rpx;
}
.vaccine-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
}
.close-btn {
  font-size: 40rpx;
  color: #aaa;
  font-weight: 700;
  cursor: pointer;
}
.vaccine-loading, .vaccine-error, .vaccine-empty {
  text-align: center;
  color: #888;
  font-size: 26rpx;
  margin: 30rpx 0;
}
.vaccine-item {
  margin-bottom: 18rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.vaccine-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}
.vaccine-name {
  font-size: 28rpx;
  color: #222;
  font-weight: 600;
}
.vaccine-date, .vaccine-status {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  display: block;
}

/* 领养按钮吸底 */
.adopt-btn-fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.95);
  box-shadow: 0 -2rpx 12rpx rgba(72,187,120,0.08);
  padding: 18rpx 32rpx 32rpx 32rpx;
  z-index: 100;
}
.adopt-btn {
  width: 100%;
  height: 76rpx;
  border-radius: 38rpx;
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(90deg, #48bb78 60%, #42b983 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(72,187,120,0.10);
}

/* 领养申请表单弹窗 */
.adopt-form-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.adopt-form {
  background: #fff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
}

.form-close {
  font-size: 40rpx;
  color: #999;
  font-weight: 300;
  line-height: 1;
  padding: 8rpx;
}

.form-content {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
  resize: none;
}

.form-input:focus {
  border-color: #48bb78;
  background: #fff;
}

.form-error {
  color: #e53e3e;
  font-size: 24rpx;
  margin-bottom: 24rpx;
  padding: 12rpx 16rpx;
  background: rgba(229, 62, 62, 0.1);
  border-radius: 8rpx;
}

.form-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.form-submit-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #48bb78 60%, #42b983 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(72, 187, 120, 0.2);
}

.form-cancel-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e5e5e5;
}