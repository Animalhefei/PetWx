/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 头部样式 */
.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.logo-text {
  font-size: 72rpx;
  font-weight: 800;
  color: #ffffff;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 4rpx;
}

.logo-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  letter-spacing: 2rpx;
}

/* 主要内容区 */
.main-content {
  flex: 1;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.welcome-card {
  background: rgba(255, 255, 255, 0.85);
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #718096;
  font-weight: 400;
}

/* 用户信息区域 */
.userinfo {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  position: relative;
  padding: 0;
  width: 160rpx !important;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 6rpx solid #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.avatar-wrapper:active {
  transform: scale(0.95);
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.avatar-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}

/* 昵称输入区域 */
.nickname-section {
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3748;
  text-align: center;
}

.nickname-input {
  padding: 24rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2d3748;
  background: #f7fafc;
  transition: all 0.3s ease;
}

.nickname-input:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

/* 备用方案区域 */
.fallback-section {
  text-align: center;
  padding: 40rpx 0;
}

.get-user-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.get-user-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.version-tip {
  color: #718096;
  font-size: 26rpx;
  padding: 20rpx;
}

/* 用户资料显示 */
.user-profile {
  text-align: center;
  padding: 20rpx 0;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #667eea;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  margin-bottom: 24rpx;
}

.userinfo-nickname {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 16rpx;
}

.profile-status {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx 56rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(72, 187, 120, 0.3);
  transition: all 0.3s ease;
}

.primary-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(72, 187, 120, 0.3);
}

.btn-text {
  color: #ffffff;
  font-weight: 600;
}

/* 底部 */
.footer {
  padding: 40rpx;
  text-align: center;
}

.footer-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  font-weight: 400;
  line-height: 1.6;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .logo-text {
    font-size: 60rpx;
  }
  
  .main-content {
    padding: 0 30rpx;
    gap: 30rpx;
  }
  
  .welcome-card,
  .userinfo {
    padding: 30rpx;
    border-radius: 20rpx;
  }
  
  .avatar-wrapper {
    width: 140rpx !important;
    height: 140rpx;
  }
}