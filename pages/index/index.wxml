<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="header">
      <view class="logo">
        <text class="logo-text">PetWx</text>
        <text class="logo-subtitle">宠物爱心平台</text>
      </view>
    </view>
    
    <view class="main-content">
      <view class="welcome-card">
        <view class="welcome-title">欢迎来到宠物世界</view>
        <view class="welcome-subtitle">请完善您的个人信息</view>
      </view>
      
      <view class="userinfo">
        <block wx:if="{{canIUseNicknameComp && !hasUserInfo}}">
          <view class="avatar-section">
            <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
              <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
              <view class="avatar-overlay">
                <text class="avatar-text">点击选择头像</text>
              </view>
            </button>
          </view>
          
          <view class="nickname-section">
            <view class="input-group">
              <text class="input-label">昵称</text>
              <input type="nickname" class="nickname-input" placeholder="请输入您的昵称" bind:change="onInputChange" />
            </view>
          </view>
        </block>
        
        <block wx:elif="{{!hasUserInfo}}">
          <view class="fallback-section">
            <button wx:if="{{canIUseGetUserProfile}}" class="get-user-btn" bindtap="getUserProfile">
              <text class="btn-text">获取头像昵称</text>
            </button>
            <view wx:else class="version-tip">请使用2.10.4及以上版本基础库</view>
          </view>
        </block>
        
        <block wx:else>
          <view class="user-profile">
            <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
            <view class="profile-status">
              <text class="status-text">个人信息已完善</text>
            </view>
          </view>
        </block>
      </view>
      
      <view class="action-buttons">
        <button class="primary-btn" bindtap="startExplore">
          <text class="btn-text">开始探索</text>
        </button>
      </view>
    </view>
    
    <view class="footer">
      <text class="footer-text">让每一个宠物都能找到温暖的家</text>
    </view>
  </view>
</scroll-view>
